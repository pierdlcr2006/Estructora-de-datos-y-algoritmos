import time
import matplotlib.pyplot as plt

def factorial(n):
    if n == 0:
        return 1
    else:
        return n * factorial(n - 1)

# Valores a evaluar
valores_n = [1, 2, 4, 8, 16, 32, 64, 128, 256, 512, 1024, 2048, 2080, 2100, 4096]
tiempos = []

for n in valores_n:
    inicio = time.time()
    try:
        factorial(n)  # Ejecutar el factorial
        tiempos.append(time.time() - inicio)
    except RecursionError:
        tiempos.append(None)  # Guardar None si hay error de recursi칩n

# Filtrar valores v치lidos para graficar
valores_validos = [n for i, n in enumerate(valores_n) if tiempos[i] is not None]
tiempos_validos = [t for t in tiempos if t is not None]

# Graficar resultados
plt.plot(valores_validos, tiempos_validos, marker='o', linestyle='-', color='b', label='Tiempo de ejecuci칩n')
plt.xlabel('Valor de n')
plt.ylabel('Tiempo (segundos)')
plt.title('Tiempo de ejecuci칩n del Factorial Recursivo')
plt.legend()
plt.grid()
plt.show()


